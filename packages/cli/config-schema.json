{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "$schema": {
      "description": "Pointer to the schema against which this document should be validated.",
      "type": "string"
    },
    "publicDir": {
      "description": "Asset dir which serve static files",
      "type": "string"
    },
    "defaultLocale": {
      "description": "Fallback locale language",
      "type": "string"
    },
    "locales": {
      "description": "Supported locales",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "namespaces": {
      "description": "namespace to split translation files, use for improve large translation project",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "transform": {},
    "indentSpaces": {
      "description": "Indent Spaces when generate json",
      "type": "number"
    },
    "verbose": {
      "type": "boolean"
    },
    "extractor": {
      "type": "object",
      "properties": {
        "input": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "output": {
          "type": "string"
        }
      },
      "required": [
        "input",
        "output"
      ],
      "additionalProperties": false
    },
    "scanner": {
      "type": "object",
      "properties": {
        "source": {
          "type": "string"
        },
        "tsconfigPath": {
          "type": "string"
        },
        "indentationText": {
          "type": "string",
          "enum": [
            "  ",
            "    ",
            "        ",
            "\t"
          ]
        },
        "autoImport": {
          "type": "boolean"
        },
        "ignoreFiles": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "ignoreText": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "source",
        "tsconfigPath",
        "indentationText",
        "autoImport",
        "ignoreFiles",
        "ignoreText"
      ],
      "additionalProperties": false
    },
    "translator": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "prompt",
            "openai",
            "microsoft"
          ]
        },
        "openai": {
          "description": "Config with translate file by openai",
          "type": "object",
          "properties": {
            "baseURL": {
              "description": "Default is: https://api.openai.com/v1",
              "type": "string"
            },
            "apiKey": {
              "type": "string"
            },
            "modelName": {
              "description": "Check out this url: https://platform.openai.com/docs/models/overview",
              "type": "string"
            }
          },
          "required": [
            "modelName"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "type"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "publicDir",
    "defaultLocale",
    "locales",
    "namespaces",
    "indentSpaces",
    "verbose",
    "extractor",
    "scanner",
    "translator"
  ],
  "additionalProperties": false
}
